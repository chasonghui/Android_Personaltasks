<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/tool_bar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="clip_horizontal"
        android:orientation="horizontal">


    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="498dp"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/recruitBotton"
                android:layout_width="wrap_content"
                android:layout_height="186dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/staffwant"

                android:layout_margin="10dp"></ImageButton>

            <ImageButton
                android:id="@+id/applyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/staff"

                android:layout_margin="10dp">

            </ImageButton>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/socialBotton"
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/play"

                android:layout_margin="10dp"></ImageButton>

            <ImageButton
                android:id="@+id/lookAroundButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/jeju"

                android:layout_margin="10dp"></ImageButton>

        </TableRow>

    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="137dp"
            android:layout_height="93dp"
            android:layout_weight="30"
            android:src="@drawable/tree"
            android:layout_gravity="bottom">

        </ImageView>
    </LinearLayout>
</LinearLayout>